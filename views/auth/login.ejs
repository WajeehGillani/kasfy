<%- include('../layout/header.ejs') %>
<br>
<form id='login-form' action="/signin" method='post'>
  <div class="box">
    <center><h2>Login here</h2></center>
    <input type="text" placeholder="Username" id="username" name="email" required>
    <input type="password" id="password" name="password" placeholder="Password" required>
    <button type='submit'>Login</button>
    <strong><%=msg%></strong>
  </div>
  <center><a href="/register"><label for='form-switch'>Are you new? Register Here</label></a></center>
</form>

